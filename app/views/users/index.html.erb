<p id="notice"><%= notice %></p>

<div class="content">
  <h1>Users</h1>
</div>

<div class="container">
  <div class="column is-4 is-offset-4">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user %></td>
            <% if correct_user %>
              <td><%= link_to 'Edit', edit_user_path(user), class: "link" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="column is-offset-5"
<div class="column is-2">
<%= link_to 'Create New User', new_user_path, class: "button is-info is-small" %>
</div>